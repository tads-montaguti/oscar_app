<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/img_oscar"
        android:contentDescription="Imagem"
        android:layout_marginBottom="16dp"
        android:scaleType="centerInside"/>

    <EditText
        android:id="@+id/tokenText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Token de votação"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonVoteMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votar Filme"/>

    <Button
        android:id="@+id/buttonVoteDirector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votar Diretor"/>

    <Button
        android:id="@+id/buttonConfirmVote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Voto"/>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:layout_marginTop="16dp"/>
</LinearLayout>
